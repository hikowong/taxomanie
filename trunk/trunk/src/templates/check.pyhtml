<html>

<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<link rel="stylesheet" type="text/css" href="css">
<title> Taxonamie </title>

<body>
<h1 align="center"> Your Collection </h1>

<%#
Navigation buttons beetween trees
#%>

<center>
<table border='0' cellpadding='2' cellspacing='5'>
<tr>
<td>

<%
if len(collection) > 1:
    if index > 0:
%>
        <%|%>
        <a href='check?index=<%$ index-1 %>'> Previous </a>
    <%|%>

    </td>
    <form>
    <td>
    <input type="text" size="1" value="<%$ index+1 %>" name="index"> </input>
    /<%$ len(collection) %>
    </td>
    </form>
    <td>

<%
    if index < len(collection)-1:
%>
        <%|%>
        <a href='check?index=<%$ index+1 %>'> Next </a>
<%|%>
</td>
</tr>
</table>
</center>
<hr />

<%
from phylogenictree import PhylogenicTree
tree = collection[index]
if tree:
    mytree = PhylogenicTree( tree, reference )
    tree = mytree.display( target = "html", all_parents = allparents )
    tree += "<hr />"
%>

<%#
The sidebar
#%>

<div id="sidebar">
<b> Options </b>
<ul>
<li>
<%
if mytree.hasparents:
    if allparents:
%>
        <%|%>
        <a href='check?index=<%$ index %>&allparents=0'> Display only common parents </a>
<%
    else:
%>
        <%|%>
        <a href='check?index=<%$ index %>&allparents=1'> Display all parents </a>
<%|%>
</li>
</ul>

<br />

<b>Menu</b>
<ul>
<li><a href="."> Test another collection </a></li>
</ul>
</div>

<ul>
<%$ tree %>
</ul>


</body> </html>

